<div class="row g-0">
    <div class="col-lg-8 col-12">
        <section class="rounded-12px" id="news-item">
            <div class="container g-3">
                <div class="news-container">
                    {{#with infoNews}}
                    <div class="mb-4">
                        <div class="news-title">
                            <h2 class="fw-bold mb-3">{{news.titleNews}}</h2>
                        </div>
                        <div class="d-flex align-items-center justify-content-between">
                            <div class="author">
                                <div class="avatar">
                                    <img loading="lazy" src="{{userPost.avatar}}" width="40px" class="rounded-circle">
                                </div>
                                <div>
                                    <div class="name">{{userPost.username}}</div>
                                    <div class="created-news text-color">{{{formatTime news.createdAt}}}</div>
                                </div>
                            </div>
                            <div class="user-contact">
                                <a href="" class="btn-link link ms-2 h5"><i class="bi bi-bookmark"></i></a>
                                <a href="" class="btn-link link ms-2 h5"><i class="bi bi-facebook"></i></a>
                                <a href="" class="btn-link link ms-2 h5"><i class="bi bi-linkedin"></i></a>
                                <a href="" class="btn-link link ms-2 h5"><i class="bi bi-twitter"></i></a>
                            </div>
                        </div>
                    </div>

                    <div class="text mb-4">{{{news.desc}}}</div>

                    <div class="tag mb-4">
                        <b class="me-2">Tag:</b>
                        {{#each news.tag}}
                        <a href="" class="me-2 btn tag-btn">{{this}}</a>
                        {{/each}}
                    </div>

                    <div class="d-flex align-items-center justify-content-between mb-4">
                        <div>
                            <div class="d-inline-block me-3">
                                <i class="bi bi-heart" id="like-new"></i>
                                <span class="ms-2"><span class="amount">{{news.liked}}</span> lượt thích</span>
                            </div>
                            <div class="d-inline-block">
                                <i class="bi bi-chat-text"></i>
                                <span class="ms-2">{{countComment}} bình luận</span>
                            </div>
                        </div>
                        <div>
                            <a href="" class="btn-link link ms-2 h5"><i class="bi bi-bookmark"></i></a>
                            <a href="" class="btn-link link ms-2 h5"><i class="bi bi-facebook"></i></a>
                            <a href="" class="btn-link link ms-2 h5"><i class="bi bi-linkedin"></i></a>
                            <a href="" class="btn-link link ms-2 h5"><i class="bi bi-twitter"></i></a>
                        </div>
                    </div>
                    {{/with}}

                    <hr>

                    <section class="comment p-0 mb-0">
                        <div class="container g-0">

                            {{!-- Form comment user --}}
                            <div action="" id="user-cmt">
                                <div class="avatar-input">
                                    <img loading="lazy" src="{{user.avatar}}" id="cmt-avatar" onerror="this.src='/img/user-icon.svg'"
                                        class="me-4" />
                                    <textarea name="" class="flex-grow-1 flex-shrink-0 flex-md-fill" id="textComment"
                                        rows="1" placeholder="Nhập bình luận..."></textarea>
                                    <button id="sendComment" class="mb-0 ms-auto ms-sm-4 mt-2 mt-md-0 btn">Gửi bình
                                        luận</button>
                                </div>
                                <p class="form-message text-center d-none">Bạn chưa nhập bình luận</p>
                            </div>

                            <div class="comment-list" id="cmt-context"></div>

                        </div>
                    </section>

                </div>
            </div>
        </section>
    </div>
    <div class="col-lg-4 col-12">
        <div id="related-news">
            <div class="container g-3 pt-4 pt-lg-0">
                <div class="desc-title mb-3">
                    <h4 class="topic-title fw-bold m-0">Tin hàng đầu</h4>
                </div>
