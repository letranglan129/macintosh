<script src="/js/comment.js"></script>
<script>
    var socket = io()
    const comments = {{{ returnValue comments }}}
    const userComment = {{{ returnValue userComment }}}
    const news = {{{ returnValue infoNews.news }}}
    const user = {{{ returnValue user }}}
    const userFull = {{{ returnValue userFull }}}
    const modalValidateBtn = document.querySelector('#modal-validate-btn')
    const likeNewBtn = document.querySelector('#like-new')
    handleComment('news')

    



    document.addEventListener('DOMContentLoaded', function () {
        const page = {
            conditionLike(button, condition) {
                if (condition) {
                    button.classList.add('bi-heart-fill')
                    button.classList.remove('bi-heart')
                } else {
                    button.classList.remove('bi-heart-fill')
                    button.classList.add('bi-heart')
                }
            },

            handleLikeBtnEvent() {
                var _this = this
                likeNewBtn.onclick = function (e) {
                    if (Object.keys(user).length == 0) {
                        modalValidateBtn.click()
                    } else {
                        _this.conditionLike(likeNewBtn, likeNewBtn.matches(`.bi-heart`))
                        
                        //send to server user liked comment  
                        socket.emit('like-news-action', { id: news._id, userId: userFull._id, like: false })
                    }
                }
            },
            
            socketResultLikeNews() {
                socket.on('liked-news', ({ idComment, userLiked }) => {
                    likeNewBtn.parentElement.querySelector('.amount').textContent = userLiked.length
                })
            },

            start () {
                this.conditionLike(likeNewBtn, news.userLiked.includes(userFull._id))
                this.handleLikeBtnEvent()
                this.socketResultLikeNews()
            }
        }

        page.start()
    })
</script>